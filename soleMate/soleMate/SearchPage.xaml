<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="soleMate.SearchPage">

    <StackLayout>
        <Label Text="Search" 
               HorizontalOptions="Center"
               FontSize="Large"
               FontAttributes="Bold"
               VerticalOptions="Center" />

        <Label Text="Model"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <ia:Checkbox x:Name="AwesomeCheckbox"
            OutlineColor="Blue"
            FillColor="Blue"
            CheckColor="White"
            Shape="Rectangle" 
            IsCheckedChanged="CheckmarkButtonClicked" />

        <Button Text="Search" 
            Clicked="OnSearchButtonClicked" />
    </StackLayout>

</ContentPage>